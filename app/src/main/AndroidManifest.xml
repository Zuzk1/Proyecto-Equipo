<?xml version="1.0" encoding="utf-8"?><manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- ================================== Permisos ================================== -->
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.VIBRATE" />


    <!-- ================================== Aplicación ================================== -->
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/icono"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icono_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProyectoAula"
        tools:targetApi="31">

        <!-- =============================== Actividades de la App =============================== -->

        <!-- Actividad de Splash Screen y LAUNCHER (Punto de entrada de la app) -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.App.Starting">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Actividad Principal con el Calendario -->
        <activity
            android:name=".MainActivity2"
            android:exported="false"
            android:label="Erro Task" />

        <!-- Actividad para Añadir Tareas -->
        <activity
            android:name=".AddReminderActivity"
            android:exported="false" />

        <!-- Actividad para Ver la Lista de Tareas -->
        <activity
            android:name=".AddReminderViewActivity"
            android:exported="false" />

        <!--
         Actividad para mostrar detalles del día.
         Se le aplica un tema de Diálogo para que aparezca como una ventana flotante.
        -->
        <activity
            android:name=".DayDetailsActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light.Dialog" />


        <!-- =============================== Componentes de Sistema =============================== -->

        <!-- Receiver para las Notificaciones -->
        <receiver
            android:name=".NotificationReceiver"
            android:enabled="true"
            android:exported="true" />

        <!-- Metadata para fuentes pre-cargadas -->
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

    </application>

</manifest>
