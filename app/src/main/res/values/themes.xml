<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Tema base de la aplicación -->
    <!-- CAMBIO: Se han añadido los colores primarios para dar estilo a la Toolbar y otros componentes -->
    <style name="Base.Theme.ProyectoAula" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Color de la barra de estado (la de arriba del todo con la hora, batería, etc.) -->
        <!-- CAMBIO: Usamos un marrón más oscuro para la barra de estado para mayor contraste -->
        <item name="android:statusBarColor">@color/primary_color</item>

        <!-- Color primario de la marca (usado para el fondo de la Toolbar) -->
        <item name="colorPrimary">@color/primary_color</item>

        <!-- Color del texto y los iconos sobre el color primario (ej. el título en la Toolbar) -->
        <item name="colorOnPrimary">@color/text_on_dark_primary</item>

        <!-- Color de fondo general para las ventanas de la app -->
        <item name="android:windowBackground">@color/background_color</item>
    </style>

    <style name="Theme.ProyectoAula" parent="Base.Theme.ProyectoAula" />

    <!-- SPLASH SCREEN (Sin cambios) -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/background_color</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/icono</item>
        <item name="postSplashScreenTheme">@style/Theme.ProyectoAula</item>
    </style>

    <!-- Estilo General de la App (Sin cambios) -->
    <style name="BotonMarron" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/primary_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">14dp</item>
    </style>

    <!-- Estilo para la Toolbar (Ahora usará los colores del tema principal, puedes dejarlo o quitarlo) -->
    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    </style>

    <!-- Estilos para el Calendario (Sin cambios) -->
    <style name="CalendarDateText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="CalendarHeaderText" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CalendarWeekDayText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/hint_color</item>
    </style>
    <!-- Estilo para el texto de los días de la semana en el calendario (Sin cambios) -->
    <style name="CustomWeekDayText" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
