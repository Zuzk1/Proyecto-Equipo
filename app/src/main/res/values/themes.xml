<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ProyectoAula" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.ProyectoAula" parent="Base.Theme.ProyectoAula" />

    <!-- TEMA PARA LA PANTALLA DE BIENVENIDA (SPLASH SCREEN) -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Color de fondo para la splash screen. Puedes crear un color en colors.xml o usar uno existente -->
        <item name="windowSplashScreenBackground">#F4DADA</item>

        <!-- El ícono que se animará. Android usará el ícono principal de tu app -->
        <item name="windowSplashScreenAnimatedIcon">@mipmap/icono</item>

        <!-- El tema que se aplicará después de que termine la splash screen -->
        <item name="postSplashScreenTheme">@style/Theme.ProyectoAula</item>
    </style>
    <!-- Estilo personalizado para los botones -->
    <style name="BotonMarron" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/primary_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">14dp</item>
    </style>

    </resources>