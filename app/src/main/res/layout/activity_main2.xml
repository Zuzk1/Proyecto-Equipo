<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".MainActivity2">

    <CalendarView
        android:id="@+id/CalendarioPro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/background_color"
        android:backgroundTint="@color/background_color"
        android:backgroundTintMode="src_in"
        android:hapticFeedbackEnabled="true"
        android:selectedWeekBackgroundColor="#070000"
        android:unfocusedMonthDateColor="@color/hint_color"
        android:weekNumberColor="@color/primary_color"
        android:weekSeparatorLineColor="@color/text_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CalendarTittle" />

    <TextView
        android:id="@+id/SubtittleAct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/biz_udpmincho"
        android:text="@string/SubtittleAct"
        android:textColor="@color/text_color"
        android:textColorHighlight="@color/text_color"
        android:textColorHint="@color/text_color"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.098"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CalendarioPro" />

    <TextView
        android:id="@+id/CalendarTittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/biz_udpmincho"
        android:text="Calendario"
        android:textColor="@color/text_color"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ActPendientesGeneral"
        android:layout_width="375dp"
        android:layout_height="142dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/biz_udpmincho"
        android:hint="@string/ActPendientesGeneral"
        android:inputType="textMultiLine"
        android:textColor="@color/hint_color"
        android:textColorHighlight="@color/hint_color"
        android:textColorHint="@color/hint_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SubtittleAct"
        tools:ignore="TextViewEdits" />

</androidx.constraintlayout.widget.ConstraintLayout>
