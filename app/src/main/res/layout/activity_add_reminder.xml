<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:padding="24dp"
    tools:context=".AddReminderActivity">

    <TextView
        android:id="@+id/TittleNewAct"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/biz_udpmincho"
        android:gravity="center"
        android:text="@string/TittleNewAct"
        android:textColor="@color/text_color"
        android:textSize="38sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ActNameLayout"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:hint="@string/ActNameEdit"
        android:textColorHint="@color/hint_color"
        app:boxStrokeColor="@color/primary_color"
        app:hintTextColor="@color/primary_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TittleNewAct">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ActNameEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:inputType="textCapSentences"
            android:textColor="@color/text_color"
            android:textSize="20sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ActNoteLayout"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="@string/ActNoteEdit"
        android:textColorHint="@color/hint_color"
        app:boxStrokeColor="@color/primary_color"
        app:hintTextColor="@color/primary_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ActNameLayout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ActNoteEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:gravity="top|start"
            android:inputType="textMultiLine"
            android:lines="3"
            android:textColor="@color/text_color" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/fecha_save"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="serif"
        android:gravity="left|center_vertical"
        android:padding="16dp"
        android:text="@string/add_reminder_select_date"
        android:textColor="@color/primary_color"
        android:textSize="18sp"
        app:drawableStartCompat="@drawable/icon_date"
        app:drawableTint="@color/primary_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ActNoteLayout"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/TimeReminder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:drawablePadding="12dp"
        android:focusable="true"
        android:fontFamily="serif"
        android:gravity="left|center_vertical"
        android:padding="16dp"
        android:text="@string/add_reminder_select_time"
        android:textColor="@color/primary_color"
        android:textSize="18sp"
        app:drawableStartCompat="@drawable/ic_time"
        app:drawableTint="@color/primary_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fecha_save"
        tools:ignore="RtlHardcoded" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/NotificationSwitch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:checked="true"
        android:fontFamily="serif"
        android:text="@string/NotificationSwitch"
        android:textColor="@color/text_color"
        android:textColorLink="@color/text_color"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TimeReminder" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/ButtonSave"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/primary_color"
        android:fontFamily="serif"
        android:padding="14dp"
        android:text="@string/ButtonSave"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NotificationSwitch" />

</androidx.constraintlayout.widget.ConstraintLayout>

