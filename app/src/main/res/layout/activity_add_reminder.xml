<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddReminderActivity">

    <TextView
        android:id="@+id/TittleNewAct"
        android:layout_width="382dp"
        android:layout_height="69dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/biz_udpmincho"
        android:gravity="center"
        android:text="@string/TittleNewAct"
        android:textSize="38sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ActNameEdit"
        android:layout_width="285dp"
        android:layout_height="82dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:fontFamily="serif"
        android:gravity="center"
        android:hint="@string/ActNameEdit"
        android:inputType="textMultiLine"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TittleNewAct" />

    <EditText
        android:id="@+id/ActNoteEdit"
        android:layout_width="263dp"
        android:layout_height="59dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:fontFamily="serif"
        android:gravity="center"
        android:hint="@string/ActNoteEdit"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ActNameEdit" />

    <Button
        android:id="@+id/ButtonSave"
        android:layout_width="216dp"
        android:layout_height="58dp"
        android:layout_marginTop="48dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="@string/ButtonSave"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NotificationSwitch"
        app:layout_constraintVertical_bias="0.08" />

    <Switch
        android:id="@+id/NotificationSwitch"
        android:layout_width="231dp"
        android:layout_height="49dp"
        android:layout_marginTop="52dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="@string/NotificationSwitch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ActNoteEdit" />

</androidx.constraintlayout.widget.ConstraintLayout>