<?xml version="1.0" encoding="utf-8"?>
<!-- CAMBIO: Altura cambiada a match_parent para que el layout ocupe toda la pantalla. -->
<!-- CAMBIO: Color de fondo principal ahora es tu 'window_background' (crema). -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_color"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".DayDetailsActivity">

    <!-- Se añade un LinearLayout interno que simula tu diseño de diálogo original. -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_background"
        android:backgroundTint="@color/primary_color"
        android:backgroundTintMode="src_over"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Tu TextView para el título (sin cambios) -->
        <TextView
            android:id="@+id/tvDateTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/biz_udpmincho"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/text_on_dark_primary"
            android:textStyle="bold"
            tools:text="@string/day_details_preview_title" />

        <!-- Tu TextView para las tareas (sin cambios) -->
        <TextView
            android:id="@+id/tvTasksList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:lineSpacingExtra="8dp"
            android:textColor="@color/text_on_dark_hint"
            android:textSize="18sp"
            tools:text="@string/day_details_preview_tasks" />

    </LinearLayout>

</LinearLayout>
