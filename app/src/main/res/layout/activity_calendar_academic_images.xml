<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/background_color">

    <!-- BARRA DE TÍTULO SUPERIOR -->
    <TextView
        android:id="@+id/HeadTittleCalendarAc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/primary_color"
        android:fontFamily="@font/biz_udpmincho"
        android:gravity="center"
        android:padding="16dp"
        android:text="@string/HeadTittleCalendarAc"
        android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
        android:textColor="?attr/colorOnPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- BOTÓN DE FLECHA ATRÁS -->
    <ImageButton
        android:id="@+id/btnBackCalendar"
        android:layout_width="48dp"
        android:layout_height="0dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Volver"
        android:src="@drawable/ic_arrow_back"
        app:tint="?attr/colorOnPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/HeadTittleCalendarAc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/HeadTittleCalendarAc" />

    <ImageView
        android:id="@+id/calendario_escolarizada"
        android:layout_width="333dp"
        android:layout_height="310dp"
        android:layout_margin="16dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/HeadTittleCalendarAc" />

    <ImageView
        android:id="@+id/calendario_no_escolarizada"
        android:layout_width="333dp"
        android:layout_height="310dp"
        android:layout_margin="16dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calendario_escolarizada" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="311dp"
        android:alpha="0.7"
        android:fontFamily="@font/biz_udpmincho"
        android:text="@string/textView"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/calendario_no_escolarizada"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calendario_escolarizada" />

</androidx.constraintlayout.widget.ConstraintLayout>
